<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Barber Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div style="color: #FFFFFF;" class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Barber Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/Index">Inicio</a> </li>
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/Ventas/Ventas">Ventas</a> </li>
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/Login/Login">Login</a> </li>
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/GestionPersonas/Barbero/Barbero">Lista de Barberos</a> </li>
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/Reporte/Reporte">Reporte</a> </li>
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/Servicios/Servicios">Servicios</a> </li>
                        <li class="nav-item"> <a class="nav-link text-dark" asp-area="" asp-page="/Roles/Roles">Roles</a> </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Grupo Mintic HEMJJ - <a asp-area="" asp-page="/inicio">Inicio</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>