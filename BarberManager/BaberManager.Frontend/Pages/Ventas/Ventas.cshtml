@page
@model BarberManager.Frontend.VentasModel
@{
    ViewData["Title"] = "Registro de Ventas" ;
    
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <br>
  <div class="v-container">
    <h1 id="regis">Registro de ventas</h1>
    <form id="formulario1" action="/Proyecto1/" method="post" >
      <div class="formulario-interno">
        <div class="form-group"> 
          <label for="hora">Seleccione la hora del servicio</label> <input type="time" id="hora" name="hora" />
          <br><br>
          <label for="servicio">Seleccione el tipo de servicio:</label><br><br>
            <div class="form-group">
              <input type="checkbox" id="serv1"> Corte normal<br>
              <input type="checkbox" id="serv2"> Corte y barba<br>
              <input type="checkbox" id="serv3"> Barba con diseño<br>
              <input type="checkbox" id="serv4"> Tintura<br>
              <input type="checkbox" id="serv5"> Corte especial y tinte<br>
              <input type="checkbox" id="serv6"> Lavado<br>
            </div>
          <br><br>
          </div>
          <div class="form-group">
          <p>Venta actual: <output id="venta" for="venta"></output></p>
          </div>
          <div class="form-group">
          <label for="servicio">Seleccione el Barbero</label>
          <select name="barbero" id="barbero">
            <optgroup label="Seleccione barbero">
              <option value="">Seleccione</option>
              <option value="barbero2">Andres</option>
              <option value="barbero3">Maicol</option>
              <option value="barbero4">Yeison</option>
              <option value="barbero5">Dayan</option>
              <option value="barbero6">Sandra</option>
            </optgroup>
          </select><br><br><br>
          </div>
          <div class="mx-auto">
            <button type="submit"class="btn btn-primary">Registrar</button>
            <button type="reset"class="btn btn-primary">Limpiar</button>
          </div>
      </div>
    </form>
    
  </div>
}
