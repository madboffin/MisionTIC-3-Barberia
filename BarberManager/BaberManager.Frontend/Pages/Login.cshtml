@page
@model BaberManager.Frontend.LoginModel
@{
    ViewData["Title"] = "Login";
    ViewData["script"] = "login.js";
}

<div class="v-container">
    <div class="text-center" id="login-title">
        <h1 class="display-4">Ingreso a sistema</h1>
        <h2>Bienvenido</h2>
    </div>
    @Html.AntiForgeryToken()
    <div class="fullscreen-container">
        <div class="login-container">
            <form class="form">
                <div class="input-group">
                    <label for="usuario">Usuario</label>
                    <input type="text" id="usuario" placeholder="Correo">
                </div>
                <div class="input-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" placeholder="Contraseña">
                </div>
                <button type="button" class="login-button" id="btnLogin">Entrar</button>
            </form>
        </div>
    </div>
</div>
