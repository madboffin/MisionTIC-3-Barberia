@page
@model BaberManager.Frontend.RolesModel
@{
     @* ViewData["script"];*@
    /* ViewData["script"] = "roles.js";*/
}

<div class="container border-secondary rounded-25">
    <div class="row">
        <div class="col-md-2 col-sm-12"></div>
        <div class="col-md-8 col-sm-12">
            <h2>Listado Roles Barberia</h2>
            <table class="table" id="tableRoles">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Rol</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Rol in Model.listaRoles)
                    {
                        <tr>
                            <td>@Rol.Id</td>
                            <td>@Rol.Nombre</td>
                            
                            <td> <a asp-page="../Roles/RolesEditar" asp-route-Id="@Rol.Id">
                                    <i class="far fa-edit"></i></a>
                                <a asp-page="../Roles/RolesEditar" asp-route-Id="@Rol.Id">
                                    <i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <form action="./RolesCrear">
                <button type="submit" class="btn btn-primary">Crear Roles</button>
            </form>
        </div>
        <div class="col-md-2 col-sm-12"></div>
    </div>

</div>
